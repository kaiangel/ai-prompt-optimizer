page {
  background: linear-gradient(to bottom, var(--background-start), var(--background-end));
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  --background-start: #ffffff;
  --background-end: #e8f5e9;
  --magic-primary: #43B692;
  --magic-secondary: #3F88C5;
}

.aurora-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(67, 182, 146, 0.05), rgba(63, 136, 197, 0.05));
  pointer-events: none;
  animation: aurora-flow 15s ease-in-out infinite;
}

@keyframes aurora-flow {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.6; }
}