.header {
  padding: 88rpx 40rpx 40rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(8px);
  position: relative;
  border-bottom: 2rpx solid rgba(155, 135, 245, 0.1);
}

.title-container {
  display: inline-block;
  position: relative;
  margin-bottom: 24rpx;
}

.title {
  font-size: 48rpx;
  color: #9b87f5;
  letter-spacing: 8rpx;
  font-weight: 300;
}

.title-underline {
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 2rpx;
  background: linear-gradient(to right, #9b87f5, #7e69ab);
  opacity: 0.6;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  font-weight: 300;
  margin-top: 24rpx;
}