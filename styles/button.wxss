.button-container {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

.optimize-button {
  padding: 0 48rpx;
  height: 80rpx;
  background: linear-gradient(to right, var(--magic-primary), var(--magic-secondary));
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(67, 182, 146, 0.2);
  transition: all 0.3s;
  border: none;
}

.optimize-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(67, 182, 146, 0.1);
}

.copy-button {
  padding: 0 32rpx;
  height: 64rpx;
  background: rgba(67, 182, 146, 0.1);
  border-radius: 32rpx;
  color: var(--magic-primary);
  font-size: 26rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  border: none;
}

.copy-button:active {
  background: rgba(67, 182, 146, 0.2);
}