.button-container {
  padding: 32rpx;
  display: flex;
  justify-content: center;
}

.optimize-button {
  padding: 0 64rpx;
  height: 88rpx;
  background: linear-gradient(to right, #9b87f5, #7e69ab);
  border-radius: 44rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(155, 135, 245, 0.2);
  transition: all 0.3s;
  border: none;
}

.optimize-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(155, 135, 245, 0.1);
}