.input-container {
  padding: 32rpx;
  margin-top: 24rpx;
}

.prompt-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  font-size: 28rpx;
  color: #2c3e50;
  transition: all 0.3s;
  border: 2rpx solid rgba(67, 182, 146, 0.1);
}

.prompt-input-placeholder {
  color: #999;
  font-size: 28rpx;
}

.result-container {
  padding: 32rpx;
  animation: fade-in 0.3s ease-out;
}

.result-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid rgba(67, 182, 146, 0.1);
}

.result-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.result-content {
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

.copy-button-container {
  display: flex;
  justify-content: flex-end;
}

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}