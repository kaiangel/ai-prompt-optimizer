/* 全局容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #ffffff, #f5f5f5);
  position: relative;
  overflow-x: hidden;
}

/* 背景效果 */
.container::before {
  content: "";
  position: fixed;
  inset: 0;
  background: linear-gradient(to bottom right, rgba(155, 135, 245, 0.03), rgba(126, 105, 171, 0.03));
  pointer-events: none;
  animation: aurora-flow 10s ease infinite;
}

/* 头部样式 */
.header {
  padding: 32rpx 40rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(8px);
  border-bottom: 2rpx solid rgba(155, 135, 245, 0.1);
  position: relative;
}

.user-menu {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
}

.avatar-button {
  padding: 0;
  background: none;
  border: none;
  width: 80rpx;
  height: 80rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.title-container {
  position: relative;
  display: inline-block;
  margin-bottom: 24rpx;
}

.title {
  font-size: 40rpx;
  color: #9b87f5;
  letter-spacing: 8rpx;
  font-weight: 300;
}

.title-underline {
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 2rpx;
  background: linear-gradient(to right, #9b87f5, #7e69ab);
  opacity: 0.6;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  font-weight: 300;
}

/* 主要内容区域 */
.main-content {
  padding: 32rpx 16rpx;
  max-width: 1200rpx;
  margin: 0 auto;
}

/* 输入框样式 */
.input-container {
  margin-bottom: 32rpx;
  animation: fade-in-up 0.3s ease-out;
}

.prompt-input {
  width: 100%;
  min-height: 400rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(8px);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s;
}

/* 按钮样式 */
.button-container {
  display: flex;
  justify-content: center;
  margin: 24rpx 0;
}

.optimize-button {
  padding: 0 32rpx;
  height: 88rpx;
  background: linear-gradient(to right, #9b87f5, #7e69ab);
  border: none;
  border-radius: 44rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(155, 135, 245, 0.3);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.sparkle-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 加载动画 */
.loading-spinner {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(155, 135, 245, 0.9);
}

.loading-spinner::after {
  content: "";
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid white;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* 结果展示区域 */
.result-container {
  margin-top: 32rpx;
  animation: fade-in-up 0.3s ease-out;
}

.result-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(8px);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(155, 135, 245, 0.1);
}

.result-title {
  font-size: 32rpx;
  color: #9b87f5;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.result-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
  white-space: pre-wrap;
}

.copy-button-container {
  display: flex;
  justify-content: flex-end;
}

.copy-button {
  font-size: 24rpx;
  color: #9b87f5;
  background: none;
  border: none;
  padding: 16rpx 24rpx;
}

/* 动画定义 */
@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes aurora-flow {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-20rpx) scale(1.05);
  }
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}