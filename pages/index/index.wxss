@import "../../styles/base.wxss";
@import "../../styles/header.wxss";
@import "../../styles/input.wxss";
@import "../../styles/button.wxss";

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 32rpx 0;
}

.result-container {
  padding: 32rpx;
  animation: fade-in 0.3s ease-out;
}

.result-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid rgba(155, 135, 245, 0.1);
}

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}